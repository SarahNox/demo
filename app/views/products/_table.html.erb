<div id="table">
<table class="table">
<tr>
  <th> Product </th>
  <th> Description </th>
  <th> Price </th>
  <th> Category </th>
</tr>

<% @products.each do |product| %>
<tr>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.price %></td>
  <td><%= Category.find(product.category_id).name %></td>
  <td><%= link_to 'Add to Cart', add_to_cart_path(product.id), :class => "btn btn-primary" %></td>
  <td><% if current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(:id => product.id), :class => "btn btn-info"  %>
      <% end %></td>
  <td><% if current_user.admin? %>
      <%= link_to 'Destroy', product, method: :delete, :class => "btn btn-warning"  %>
      <% end %></td>
</tr>
<% end %>
</table>
</div>
