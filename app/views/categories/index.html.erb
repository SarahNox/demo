<h1>Products Index by Category</h1>

<table class="table">
<tr>
  <th class= "col-sm-1"> Category </th>
</tr>

<% @categories.each do |category, product| %>
<tr>
  <td><%= category.name %></td>
  <td><%= link_to 'Show all Products', category_path(:id => category.id) %></td>
  <td><% if current_user.admin? %>
      <%= link_to 'Destroy', category, method: :delete %>
      <% end %></td>
</tr>
<% end %>
</table>
