<h1> Products by Category </h1>
<div id="table">
<table class="table">
<tr>
  <th> Product </th>
  <th> Description </th>
  <th> Price </th>
</tr>

<% @products.each do |product| %>
<tr>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.price %></td>
  <td><%= link_to 'Add to Cart', add_to_cart_path(product.id) %></td>
  <td><% if current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(:id => product.id) %>
    <% end %></td>
  <td><% if current_user.admin? %>
    <%= link_to 'Destroy', product, method: :delete %>
    <% end %></td>
</tr>
<% end %>
</table>
</div>