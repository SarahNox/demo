<h1>Your Cart</h1>

<%= link_to 'Empty The Cart', clear_cart_path, :class => "btn btn-warning"  %>
<% total = 0 %>

<%= form_for :order do |f| %>

<div id="table">
<table class="table">
  <th> Product </th>
  <th> Desciption </th>
  <th> Quantity </th>
  <th> Price </th
</tr>

<% @cart.each do |product_id, quantity| %>
  <% product = Product.find(product_id) %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= quantity %></td>
    <td><%= product.price %></td>
    <td><% total += quantity * product.price %></td>
  </tr>
<% end %>
</table>
</div>
<p> TOTAL <p>
<p><b><%= total %> </b></p>

<%= link_to "Order".html_safe, orders_path, :method => :create, :class => "btn btn-primary" %>

<% end %>
