<h1>Your Cart</h1>

<%= link_to 'Emtpy The Cart', clear_cart_path %>
<% total = 0 %>

<%= form_for :order do |f| %>

<div id="table">
<table class="table">
  <th class= "col-sm-2"> Product </th>
  <th class= "col-sm-3"> Desciption </th>
  <th class= "col-sm-2"> Quantity </th>
  <th class= "col-sm-1"> Price </th
</tr>

<% @cart.each do |product_id, quantity| %>
  <% product = Product.find(product_id) %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= quantity %></td>
    <td><%= product.price %></td>
    <td><% total += quantity * product.price %></td>
  </tr>
<% end %>
</table>
</div>

<p><b><%= total %> </b></p>

<%= link_to 'Order', orders_path, method: :create %>
<% end %>

