<h1>Your Cart</h1>
<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Description<th>
    <th>Price</th>
    <th>Category</th>
  </tr>
</thead>

<tbody> 
  <%@products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.category %></td>
    </tr>
  <% end %>
</tbody>
</table>
